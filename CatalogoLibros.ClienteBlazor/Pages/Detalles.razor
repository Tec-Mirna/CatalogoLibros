@page "/detalles/{id:int}"
@using Models
@using Services
@inject ILibroService LibroService

<MudText Typo="Typo.h5">Detalles del Libro</MudText>

@if (libro == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <MudCard>
        <MudCardHeader Class="blue lighten-2">
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@libro.Nombre</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardActions Class="center">
            <img src="@libro.Imagen" alt="@libro.Nombre" Elevation="25" class="rounded-lg" width="60%" height="auto" />
        </MudCardActions>
    </MudCard>
}
@code {
    [Parameter]
    public int id { get; set; }

    Libro libro = new Libro();

    protected override async Task OnInitializedAsync()
    {
        if (id > 0)
        libro = await LibroService.GetById(id);
    }
}
