@page "/categorias"
@using Models
@using Services
@inject  ICategoriaService CategoriaService

<MudText Typo="Typo.h4">Categorias</MudText>

<MudGrid>
        @foreach (var item in categoria)
        {
            <MudItem xs="12" sm="10" md="6" lg="4">
                <MudCard>
                    <MudCardHeader Class="blue lighten-1">
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@item.Nombre</MudText> 
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardActions>
                        <MudButton Link="@($"/detalles/{item.Id}")" Variant="Variant.Outlined" Color="Color.Success">Detalles</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
 </MudGrid>

@code {
    IEnumerable<Categoria> categoria = new List<Categoria>();
    protected override async Task OnInitializedAsync()
    {
        categoria = await CategoriaService.GetAll();
    }
}
