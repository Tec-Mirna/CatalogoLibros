@page "/autores"
@using Models
@using Services
@inject IAutorService AutorService


<MudText Typo="Typo.h3">Autores</MudText>

<MudGrid>
    @foreach (var item in autor)
    {
        <MudItem xs="12" sm="10" md="6" lg="4">
            <MudCard>
                <MudCardHeader Class="blue darken-1">
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@item.Nombre</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardActions>
                    <MudButton Link="@($"/libroxrelaciones/{item.Id}")" Variant="Variant.Outlined" Color="Color.Tertiary" Class="text-center">Ver libros</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>

@code {
    IEnumerable<Autor> autor = new List<Autor>();

    protected override  async Task OnInitializedAsync()
    {
        autor = await AutorService.GetAll();
    }
}
